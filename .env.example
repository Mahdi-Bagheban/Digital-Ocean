# Your DigitalOcean API Token
# Get from: https://cloud.digitalocean.com/account/api/tokens
# Click: Generate New Token â†’ Copy token
DO_API_TOKEN="dop_v1_your_api_token_here_abc123xyz789"

# SSH Key Name in your DigitalOcean account
# Get from: https://cloud.digitalocean.com/account/security/ssh_keys
# Must match exactly the name you see in DigitalOcean
SSH_KEY_NAME="github-actions-key"

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ğŸ¯ OPTIONAL - Customize your server (defaults shown below)
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Name of your Droplet (Droplet = Virtual Server)
# Use only: letters, numbers, hyphens (no spaces)
DO_DROPLET_NAME="rustdesk-server-v10"

# Region/Data Center Location
# Options: fra1, ams3, lon1, nyc1, sfo3, sgp1
# fra1 = Frankfurt (BEST for Iran/Middle East)
DO_REGION="fra1"

# Server Size (Droplet Size)
# Options:
#   - s-1vcpu-512mb-10gb    (Nano - $4/mo)
#   - s-2vcpu-4gb-intel     (Small - $26/mo) â­ Recommended
#   - s-4vcpu-8gb-intel     (Standard - $52/mo)
#   - m-2vcpu-16gb          (High Memory - $98/mo)
#   - m-8vcpu-64gb-intel    (Extra Large - $435/mo)
DO_SIZE_SLUG="s-2vcpu-4gb-intel"

# Enable IPv6 (dual-stack networking)
# true = Enable IPv6 (recommended)
# false = Only IPv4
DO_ENABLE_IPV6="true"

# Enable Backups (20% additional cost)
# true = Automatic daily backups (costs extra)
# false = No backups (costs nothing)
DO_ENABLE_BACKUPS="false"

# Server Tags (for organization)
# Comma-separated, no spaces after commas
DO_TAGS="github-actions,rustdesk,v10,development"

# Operating System Image
# Default: ubuntu-24-04-x64 (Ubuntu 24.04 LTS)
# Don't change unless you know what you're doing
DO_IMAGE="ubuntu-24-04-x64"

# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# ğŸ¨ ADVANCED - Script behavior customization
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Enable verbose output (for debugging)
# true = Show all details
# false = Minimal output
VERBOSE="true"

# API Request timeout (seconds)
# How long to wait for DigitalOcean API responses
API_TIMEOUT="30"

# Poll interval for Droplet status (seconds)
# How often to check if Droplet is ready
POLL_INTERVAL="5"

# Max wait time for Droplet boot (seconds)
# Total time before giving up
MAX_WAIT_TIME="600"
